{
  "name": "@perlego/text-highlighter",
  "version": "2.1.0-alpha.4",
  "description": "TextHighlighter allows you to highlight text on web pages.",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.5.5",
    "@types/jest": "^24.0.18",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.6.3",
    "babelify": "^10.0.0",
    "core-js": "^3.2.1",
    "diffable-html": "^4.0.0",
    "docdash": "^1.1.1",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-prettier": "^3.1.0",
    "express": "^4.17.1",
    "grunt": "^1.3.0",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^5.3.0",
    "grunt-contrib-clean": "^0.6.0",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-jsdoc": "^2.4.0",
    "husky": "^3.0.8",
    "ink-docstrap": "^1.3.2",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.2",
    "jsdom": "^15.1.1",
    "load-grunt-tasks": "^5.1.0",
    "prettier": "^1.18.2",
    "regenerator-runtime": "^0.13.3",
    "sanitize-html": "^1.20.1"
  },
  "jest": {
    "testURL": "https://localhost",
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "html"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/specs/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/specs/"
    ],
    "rootDir": "."
  },
  "scripts": {
    "test": "npm run test:all",
    "test:all": "jest test/**/* --testPathIgnorePatterns=test/primitivo-specs",
    "test:unit": "jest test/unit-tests",
    "test:integration": "jest test/integration-tests",
    "start": "grunt --gruntfile gruntfile.dev.js watch",
    "build": "grunt",
    "build:dev": "grunt --gruntfile gruntfile.dev.js",
    "build:cjs": "grunt babel",
    "jsdoc": "grunt jsdoc",
    "prepublishOnly": "npm run build && npm run build:cjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build:cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Perlego/texthighlighter.git"
  },
  "main": "cjs/index.js",
  "module": "src/index.js",
  "license": "MIT"
}
